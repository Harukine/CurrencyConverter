<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_title"
        android:id="@+id/activity_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/inputText"
        android:layout_below="@+id/activity_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/outputText"
        android:layout_alignEnd="@+id/outputText"
        android:hint="@string/input_value" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/outputText"
        android:layout_below="@+id/inputText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/output_value" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_btn"
        android:id="@+id/inputBtn"
        android:layout_above="@+id/outputText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/inputText"
        android:layout_toRightOf="@+id/inputText"
        android:layout_toEndOf="@+id/inputText"
        android:hint="@string/input_btn" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/output_btn"
        android:id="@+id/outputBtn"
        android:layout_alignBottom="@+id/outputText"
        android:layout_alignRight="@+id/inputBtn"
        android:layout_alignEnd="@+id/inputBtn"
        android:layout_below="@+id/inputBtn"
        android:layout_toRightOf="@+id/inputText"
        android:layout_toEndOf="@+id/inputText"
        android:hint="@string/output_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/convert_btn"
        android:id="@+id/convertBtn"
        android:layout_below="@+id/outputText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/outputBtn"
        android:layout_alignEnd="@+id/outputBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/result_value"
        android:id="@+id/textView2"
        android:layout_below="@+id/convertBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/convertBtn"
        android:layout_alignEnd="@+id/convertBtn" />

</RelativeLayout>
